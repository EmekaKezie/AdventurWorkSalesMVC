@model AdventureWorksSales.Web.Models.CreateProductCategory


@{
    ViewBag.Title = "Add Category";
}



<div  style="padding:1rem">

    <div  style="margin-top:50px">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h3 class="form-group" style="margin-bottom:50px">Add Category</h3>



                <div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.TextBoxFor(model => model.CategoryName, htmlAttributes: new { @class = "form-control", @placeholder = "Enter Category Name" })
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-primary" />
                    </div>

                    <div class="form-group">
                        <div style="color:green">
                            @ViewBag.Message
                        </div>
                    </div>
                </div>

                <div class="form-group" style="margin-top:50px">
                    @Html.ActionLink("Back to Categories", "Index", "ProductCategory")
                </div>

            </div>
        }
    </div>

</div>

