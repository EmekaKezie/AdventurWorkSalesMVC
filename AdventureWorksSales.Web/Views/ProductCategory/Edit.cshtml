@model AdventureWorksSales.Web.Models.ProductCategoryObj

@{
    ViewBag.Title = "Update Category";
}



<div style="padding:1rem">

    <div style="margin-top:50px">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h3 class="form-group" style="margin-bottom:50px">Edit Category</h3>



                <div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.ProductCategory.Name)
                        @Html.TextBoxFor(model => model.ProductCategory.Name, htmlAttributes: new { @class = "form-control", value = Model.ProductCategory.Name })
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-primary" />
                    </div>

                    <div class="form-group">
                        <div style="color:green">
                            @ViewBag.Message
                        </div>
                    </div>
                </div>

                <div class="form-group" style="margin-top:50px">
                    @Html.ActionLink("Back to Categories", "Index", "ProductCategory")
                </div>

            </div>
        }
    </div>

</div>


